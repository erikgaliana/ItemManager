{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "strictNullChecks": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@item-manager/items-services": ["libs/items-services/src/index.ts"],
      "@item-manager/items-models": ["libs/items-services/src/lib/models/items-list.models.ts"],
      "@item-manager/items-pipes": ["libs/items-services/src/lib/pipes/pipes.module.ts"]

    }
  },
  "exclude": ["node_modules", "tmp"]
}
